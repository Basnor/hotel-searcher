doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form Elements test
    body

        .elements-palette



            div
                .h3 Dropdown
                include /form-elements/my_dropdown/dropdown
                +dropdown()

            div.textfield
                .textfield__title Text Field
                .textfield__box
                    input.textfield__box__input.textfield__box__input_default(type="text", placeholder="Email")
            
            div.textfield
                .textfield__title Text Field
                .textfield__box
                    input.textfield__box__input.textfield__box__input_focused(type="text", value="This is pretty awesome")
            
            .textfield__title Dropdown
            div.iqdropdown.custom
                p.iqdropdown-selection
                div.iqdropdown-menu
                    div.iqdropdown-menu-option(data-id='Adult')
                        div
                            p.iqdropdown-item Взрослые
                    div.iqdropdown-menu-option(data-id='Children')
                        div
                            p.iqdropdown-item Дети
                    div.iqdropdown-menu-option(data-id='Babies')
                        div
                            p.iqdropdown-item Младенцы
                    button.iqdropdown-menu-clean Очистить
                    button.iqdropdown-menu-close Применить
            
            div.textfield
                .textfield__title Masked Text Field
                .textfield__box
                    input.textfield__box__input.textfield__box__input_default(data-mask="00.00.0000", placeholder="ДД.ММ.ГГГГ")
            
            div.textfield
                .textfield__title Subscription Text Field
                .textfield__box.textfield__box_size_m
                    input.textfield__box__input.textfield__box__input_default(type="text", placeholder="Email")
                    a.textfield__box__btn(href="#")
                        div.arrow
            
            div.checkbox
                .h3 Checkbox Buttons
                include /form-elements/checkbox/_list
                +checkbox-list({
                    items: [
                        {
                            label: "Можно курить"
                        },
                        {
                            label: "Можно с питомцами",
                            checked: true
                        },
                        {
                            label: "Можно пригласить гостей <br>(до 10 человек)",
                            checked: true
                        }
                    ]
                })

            div.checkbox
                .h3 Rich Checkbox Buttons
                include /form-elements/checkbox/_list
                +checkbox-list({
                    type: "checkbox",
                    items: [
                        {
                            label: "Широкий коридор",
                            description: "Ширина коридоров в номере <br>не менее 91 см."
                        },
                        {
                            label: "Помошник для инвалидов",
                            description: "На 1 этаже вас встретит специалист <br>и проводит до номера"
                        }
                    ]
                })

            div.checkbox.checkbox_doubled
                .h3 Radio Buttons
                include /form-elements/checkbox/_list
                +checkbox-list({
                    type: "radio",
                    items: [
                        {
                            name: "sex",
                            label: "Мужчина",
                            checked: true
                        },
                        {
                            name: "sex",
                            label: "Женщина"
                        }
                    ]
                })

            div.checkbox
                .h3 Toggle
                include /form-elements/checkbox/_list
                +checkbox-list({
                    type: "toggle",
                    items: [
                        {
                            label: "Получать спецпредложения",
                            checked: true
                        },
                        {
                            label: "Получать спецпредложения"
                        }
                    ]
                })

            div.checkbox
                include /form-elements/checkbox/_expansion
                +checkbox-explist({
                    expansion: {
                        title: "Expandable checkbox list",
                        opened: false
                    },
                    items: [
                        {
                            label: "Завтрак"
                        },
                        {
                            label: "Письменный стол",
                            checked: true
                        },
                        {
                            label: "Стул для кормления",
                            checked: true
                        },
                        {
                            label: "Кроватка",
                            checked: true
                        },
                        {
                            label: "Телевизор"
                        },
                        {
                            label: "Шампунь"
                        }
                    ]
                })


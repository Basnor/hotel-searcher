doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form Elements test
    body
        .elements-palette
            div 
                .textfield__title Text Field
                input.textfield__input.textfield_size_l.textfield__input_default(type="text", placeholder="Email")
            div 
                .textfield__title Text Field
                input.textfield__input.textfield_size_l.textfield__input_focused(type="text", value="This is pretty awesome")
            div 
                .textfield__title Dropdown
                div.iqdropdown.custom
                    p.iqdropdown-selection
                    div.iqdropdown-menu
                        div.iqdropdown-menu-option(data-id='Adult')
                            div
                                p.iqdropdown-item Взрослые
                        div.iqdropdown-menu-option(data-id='Children')
                            div
                                p.iqdropdown-item Дети
                        div.iqdropdown-menu-option(data-id='Babies')
                            div
                                p.iqdropdown-item Младенцы
                        button.iqdropdown-menu-clean Очистить
                        button.iqdropdown-menu-close Применить
            div 
                .textfield__title Masked Text Field
                input.textfield__input.textfield_size_l.textfield__input_default(data-mask="00.00.0000", placeholder="ДД.ММ.ГГГГ")
